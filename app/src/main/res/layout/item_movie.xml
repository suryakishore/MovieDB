<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/clItemMovie"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/ivMovieLogo"
          android:layout_width="@dimen/oneFifty_dp"
          android:layout_height="@dimen/oneten_dp"
          android:layout_marginTop="@dimen/ten_dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/logo" />
      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvMovieName"
          android:layout_width="@dimen/zero_dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/ten_dp"
          android:layout_marginTop="@dimen/ten_dp"
          android:layout_marginEnd="@dimen/ten_dp"
          android:ellipsize="end"
          android:textColor="@color/colorBlack"
          android:typeface="normal"
          android:includeFontPadding="false"
          android:singleLine="true"
          app:layout_constraintLeft_toRightOf="@+id/ivMovieLogo"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/ivMovieLogo"
          tools:text="KISHORE" />


      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvVoteCount"
          android:layout_width="@dimen/zero_dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/ten_dp"
          android:ellipsize="end"
          android:typeface="monospace"
          android:includeFontPadding="false"
          android:singleLine="true"
          app:layout_constraintStart_toStartOf="@+id/tvMovieName"
          app:layout_constraintTop_toBottomOf="@+id/tvMovieName"
          app:layout_constraintRight_toRightOf="parent"
          tools:text="KISHORE" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>